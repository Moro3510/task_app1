<h3>スケジュール新規作成</h3>

<%= form_with model: @user do |f| %>

<table>
    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>
    
    <tr>
        <th><%= f.label :start_time ,"開始日" %></th>
        <td><%= f.date_field :start_time %></td>
    </tr>
    
    <tr>
        <th><%= f.label :end_time ,"終了日" %></th>
        <td><%= f.date_field :end_time %></td>
    </tr>
    
    <tr>
        <th><%= f.label :end_day ,"終日" %></th>
        <td class ><%= f.check_box :end_day, {}, checked_value='true', unchecked_value='false' %>
        <br>終日の場合はチェックを入れます</td>
    </tr>
    
    <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= f.submit "登録完了する"%></li>
        <li><%= link_to "スケジュール情報一覧に戻る", :users %></li>
    </ul>
</div>
<% end %>